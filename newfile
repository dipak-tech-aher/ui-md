import React, { useState } from 'react';
import './Carousel.css';

const Carousel = () => {
  const [currentIndex, setCurrentIndex] = useState(0);

  const items = [
    { label: 'Waiting of sign off', number: '06' },
    { label: 'No of cases routed to License MD', number: '12' },
    { label: 'Pending Approval', number: '08' },
    { label: 'New Requests', number: '15' },
    { label: 'Completed Tasks', number: '20' }
  ];

  const visibleItems = 3;
  const totalItems = items.length;

  const moveSlide = (direction) => {
    let newIndex = currentIndex + direction;

    if (newIndex < 0) {
      newIndex = totalItems - visibleItems;
    } else if (newIndex > totalItems - visibleItems) {
      newIndex = 0;
    }

    setCurrentIndex(newIndex);
  };

  const getVisibleItems = () => {
    const endIndex = currentIndex + visibleItems;
    if (endIndex <= totalItems) {
      return items.slice(currentIndex, endIndex);
    } else {
      // If endIndex goes beyond the totalItems, wrap around
      return [...items.slice(currentIndex, totalItems), ...items.slice(0, endIndex - totalItems)];
    }
  };

  return (
    <div className="carousel">
      <button className="carousel-btn prev" onClick={() => moveSlide(-1)}></button>
      <div className="carousel-container">
        <div className="carousel-items">
          {getVisibleItems().map((item, index) => (
            <div className="carousel-item" key={index}>
              <span className="label">{item.label}</span>
              <span className="number">{item.number}</span>
            </div>
          ))}
        </div>
      </div>
      <button className="carousel-btn next" onClick={() => moveSlide(1)}></button>
    </div>
  );
};

export default Carousel;
